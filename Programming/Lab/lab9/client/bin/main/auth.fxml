<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane
    prefHeight="400.0"
    prefWidth="600.0"
    styleClass="root-pane"
    stylesheets="@/styles.css"
    xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.AuthController">
    <Label fx:id="titleLabel" alignment="CENTER" layoutX="0.0" layoutY="90.0" prefHeight="52.0" prefWidth="600.0"
           text="Product Management System" textAlignment="CENTER">
        <font>
            <Font name="Segoe UI Black" size="35.0"/>
        </font>
    </Label>
    <TextField fx:id="loginField" alignment="CENTER" layoutX="200.0" layoutY="169.0" prefHeight="30.0"
               prefWidth="200.0" promptText="Username" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0">
        <font>
            <Font name="Segoe UI" size="16.0"/>
        </font>
    </TextField>
    <PasswordField fx:id="passwordField" alignment="CENTER" layoutX="200.0" layoutY="226.0" prefHeight="30.0"
                   prefWidth="200.0" promptText="Password" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0">
        <font>
            <Font name="Segoe UI" size="16.0"/>
        </font>
    </PasswordField>
    <Button fx:id="enterButton" layoutX="255.0" layoutY="281.0" mnemonicParsing="false" onAction="#enter"
            prefHeight="36.0" prefWidth="90.0"
            style="-fx-border-color: #c0c0c0; -fx-background-radius: 10; -fx-border-radius: 10;"
            text="Enter" AnchorPane.leftAnchor="255.0" AnchorPane.rightAnchor="255.0">
        <font>
            <Font name="Segoe UI" size="18.0"/>
        </font>
    </Button>
    <CheckBox fx:id="signUpButton" layoutX="211.0" layoutY="338.0" mnemonicParsing="false" text="Sign up">
        <font>
            <Font name="Segoe UI" size="16.0"/>
        </font>
    </CheckBox>
    <ComboBox fx:id="languageComboBox" layoutX="468.0" layoutY="14.0" prefHeight="27.0" prefWidth="118.0"
              style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #c0c0c0;"/>
</AnchorPane>
