<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="670.0" prefWidth="1080.0" style="-fx-background-color: #d2efff;"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.MainController">
    <ComboBox fx:id="languageComboBox" layoutX="966.0" layoutY="14.0" prefHeight="27.0" prefWidth="118.0"
              style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #c0c0c0;"
              AnchorPane.rightAnchor="10" AnchorPane.topAnchor="16.0"/>
    <Label fx:id="userLabel" layoutX="14.0" layoutY="18.0" text="Пользователь:" AnchorPane.leftAnchor="10.0"
           AnchorPane.topAnchor="20.0">
        <font>
            <Font name="Segoe UI" size="16.0"/>
        </font>
    </Label>
    <AnchorPane layoutX="1.0" layoutY="58.0" prefHeight="590.0" prefWidth="956.0">
        <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="10.0" layoutY="492.0" prefHeight="120.0"
                  prefWidth="1080.0" vgap="10.0">
            <Button fx:id="helpButton" mnemonicParsing="false" onAction="#handleHelp" prefHeight="30.0"
                    prefWidth="90.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Help">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="infoButton" mnemonicParsing="false" onAction="#handleInfo" prefHeight="30.0"
                    prefWidth="125.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Info">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd"
                    style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Add">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdate"
                    style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Update">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="removeByIdButton" mnemonicParsing="false" onAction="#handleRemoveById" prefHeight="30.0"
                    prefWidth="153.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Remove By ID">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear"
                    style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Clear">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="executeScriptButton" mnemonicParsing="false" onAction="#handleExecuteScript"
                    style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Execute Script">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="addIfMinButton" mnemonicParsing="false" onAction="#handleAddIfMin" prefHeight="30.0"
                    style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Add If Min">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="removeAnyByPriceButton" mnemonicParsing="false" onAction="#handleRemoveAnyByPrice"
                    prefHeight="30.0" style="-fx-background-radius: 10; -fx-border-radius: 10;"
                    text="Remove Any By Price">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="countByUnitOfMeasureButton" mnemonicParsing="false"
                    onAction="#handleCountByUnitOfMeasure" style="-fx-background-radius: 10; -fx-border-radius: 10;"
                    text="Count By Unit Of Measure">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit"
                    style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Exit">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="sortButton" mnemonicParsing="false"
                    onAction="#handleSort" style="-fx-background-radius: 10; -fx-border-radius: 10;"
                    text="Sort">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="showButton" mnemonicParsing="false"
                    onAction="#handleShow" style="-fx-background-radius: 10; -fx-border-radius: 10;"
                    text="Show">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="refreshButton" mnemonicParsing="false"
                    onAction="#refreshData" style="-fx-background-radius: 10; -fx-border-radius: 10;"
                    text="Refresh">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="insertAtButton" mnemonicParsing="false"
                    onAction="#handleInsertAt" style="-fx-background-radius: 10; -fx-border-radius: 10;"
                    text="Insert At">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="maxByCreationDateButton" mnemonicParsing="false"
                    onAction="#handleMaxByCreationDate" style="-fx-background-radius: 10; -fx-border-radius: 10;"
                    text="Max By Creation Date">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout"
                    style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Log Out">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Button>
        </FlowPane>
        <TabPane layoutX="-1.0" prefHeight="492.0" prefWidth="1080.0" tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="tableTab" text="Таблица">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <TableView fx:id="tableTable" prefHeight="463.0" prefWidth="1080.0">
                        <columns>
                            <TableColumn fx:id="userColumn" prefWidth="90.0" text="User"/>
                            <TableColumn fx:id="idColumn" prefWidth="45.0" text="ID"/>
                            <TableColumn fx:id="nameColumn" prefWidth="90.0" text="Name"/>
                            <TableColumn fx:id="xColumn" prefWidth="45.0" text="X"/>
                            <TableColumn fx:id="yColumn" prefWidth="70.0" text="Y"/>
                            <TableColumn fx:id="dateColumn" prefWidth="140.0" text="Creation date"/>
                            <TableColumn fx:id="priceColumn" prefWidth="70.0" text="Price"/>
                            <TableColumn fx:id="unitOfMeasureColumn" prefWidth="130.0"
                                         text="Unit of measure"/>

                            <TableColumn fx:id="organizationIdColumn" prefWidth="45.0"
                                         text="Organization ID"/>
                            <TableColumn fx:id="organizationNameColumn" prefWidth="94.0"
                                         text="Organization name"/>
                            <TableColumn fx:id="organizationFullNameColumn" prefWidth="94.0"
                                         text="Organization FullName"/>
                            <TableColumn fx:id="organizationTypeColumn" prefWidth="90.0"
                                         text="Organization type"/>
                        </columns>
                    </TableView>
                </AnchorPane>
            </Tab>
            <Tab fx:id="visualTab" text="Visualization">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <AnchorPane fx:id="visualPane" prefHeight="463.0" prefWidth="1080.0"
                                style="-fx-background-color: white;"/>
                </AnchorPane>
            </Tab>
        </TabPane>
    </AnchorPane>
</AnchorPane>